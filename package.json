{
  "name": "daita",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "dependencies": {
    "lerna": "^3.16.5"
  },
  "devDependencies": {
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.4.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "test": "lerna run test --scope=@daita/test",
    "coverage": "nyc npm test",
    "upload-coverage": "codecov",
    "clean": "npm run clean:dist && npm run clean:tsbuildinfo && npm run clean:node_modules && npm run clean:coverage && npm run clean:nyc_output",
    "clean:tsbuildinfo": "find . -name \"tsconfig.tsbuildinfo\" -prune -exec rm '{}' +",
    "clean:dist": "find . -name \"dist\" -type d -prune -exec rm -rf '{}' +",
    "clean:coverage": "find . -name \"coverage\" -type d -prune -exec rm -rf '{}' +",
    "clean:nyc_output": "find . -name \".nyc_output\" -type d -prune -exec rm -rf '{}' +",
    "clean:node_modules": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +"
  },
  "workspaces": {
    "packages":[
      "packages/examples/**",
      "packages/cli",
      "packages/core",
      "packages/test",
      "packages/tslint",
      "packages/web",
      "packages/web-client",
      "packages/website"
    ]
  },
  "license": "MIT"
}
