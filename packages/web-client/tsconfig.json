{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "lib": ["dom", "es2016"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "types" : ["chai", "mocha"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
