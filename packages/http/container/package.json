{
  "name": "@daita-container/http-server",
  "private": true,
  "version": "0.2.31",
  "dependencies": {
    "@daita/http-server": "^0.2.31",
    "@daita/relational": "^0.2.31"
  },
  "devDependencies": {
    "@daita/pg-adapter": "^0.2.31",
    "@daita/sqlite-adapter": "^0.2.31",
    "@types/pg": "^7.14.3",
    "@types/sqlite3": "^3.1.6",
    "ts-node": "^8.10.2",
    "typescript": "~3.9.3"
  },
  "scripts": {
    "start": "node -r ts-node/register src/sqlite/index.ts",
    "build": "tsc -b tsconfig.json",
    "build:pg": "docker build -t docker.pkg.github.com/no0dles/daita/http-pg -f dockerfiles/pg/Dockerfile .",
    "build:sqlite": "docker build -t docker.pkg.github.com/no0dles/daita/http-sqlite -f dockerfiles/sqlite/Dockerfile .",
    "push:pg": "docker push docker.pkg.github.com/no0dles/daita/http-pg",
    "push:sqlite": "docker push docker.pkg.github.com/no0dles/daita/http-sqlite",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "fix-linting": "tslint -c tslint.json --fix src/**/*.ts",
    "prettier": "prettier 'src/**/*.ts' --write"
  }
}
