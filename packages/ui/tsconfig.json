{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": false,
    "lib": ["dom", "es6"],
    "paths": {
      "@components/*": ["./components/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}