{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2016"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
