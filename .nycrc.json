{
  "extends": "@istanbuljs/nyc-config-typescript",
  "extension": [".ts"],
  "include": [
    "packages/**"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.spec.ts",
    "coverage/**",
    "node_modules/**",
    "packages/examples",
    "packages/experimental",
    "packages/docs"
  ],
  "reporter": [
    "json",
    "html",
    "text-summary"
  ],
  "all": true
}
