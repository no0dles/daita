{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2015",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "lib": [
      "es2016",
      "es2019",
      "ES2020",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "incremental": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "isolatedModules": true,
    "paths": {
      "@daita/common": ["../../common/src/index.ts"],
      "@daita/common/*": ["../../common/src/*"]
    }
  },
  "references": [{
    "path": "../common"
  }],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
